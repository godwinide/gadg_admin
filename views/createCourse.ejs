<div class="form-wrap mx-2">
    <div class="card">
        <div class="card-header">
            <strong>Create Course</strong>
        </div>
        <div class="card-body card-block">
            <form action="/createCourse" method="post" class="form-horizontal" enctype="multipart/form-data">
                <%-include("./partials/messages") %>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="hf-title" class=" form-control-label">Course Title</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input required type="title" name="title" id="hf-title"
                         title="hf-title" 
                         placeholder="Enter course title..."
                         value="<%= typeof course_title != 'undefined' ? course_title : '' %>"
                          class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="select" class=" form-control-label">Faculty</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <select name="facultyID" id="select" class="form-control" required>
                            <option value="0">Please select faculty</option>
                            <% faculties.map(faculty => {%>
                                <option value="<%=faculty._id%> <%= faculty.name%>"><%= faculty.name %></option>
                            <%})%>
                        </select>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="hf-instructor" class=" form-control-label">Instructor's name</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input required type="instructor" 
                        name="instructor" 
                        id="hf-instructor" placeholder="Enter course instructor..."
                        value="<%= typeof instructor != 'undefined' ? instructor : '' %>"
                        class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="hf-pricePerTopic" class=" form-control-label">Price Per Topic</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input required type="number"
                        value="<%= typeof pricePerTopic != 'undefined' ? pricePerTopic : '' %>"
                        name="pricePerTopic" id="hf-pricePerTopic" 
                        placeholder="Price per course topic"
                        class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="hf-pricePerTopic" class=" form-control-label">Discount</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input required type="number"
                        value="<%= typeof discount != 'undefined' ? discount : '' %>"
                        name="discount" id="hf-discount" 
                        placeholder="Percentage off on full purchase eg 25"
                        class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="file-input" class=" form-control-label">Banner Image</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input required type="file" id="thumbnail" name="thumbnail" class="form-control-file" accept="image/*">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="textarea-input" class=" form-control-label">Description</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <textarea required
                        value="<%= typeof desc != 'undefined' ? desc : '' %>"
                        name="description"
                        id="textarea-input" 
                        rows="9" placeholder="Content..." 
                        class="form-control"></textarea>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
