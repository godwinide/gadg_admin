<div class="container mx-auto p-5">
    <h1>Lecturer Details</h1>
</div>
<div class="card">
    <div class="card-body">
        <div class="row container">
            <span class="col-4">Name: </span>
            <span class="col-8"><%= lecturer.firstname + " " + lecturer.lastname %></span>
        </div>
        <div class="row container">
            <span class="col-4">Commission Earned: </span>
            <span class="col-8">â‚¦<%= lecturer.commission %></span>
        </div>
        <div class="row container">
            <span class="col-4">Email: </span>
            <span class="col-8"><%= lecturer.email %></span>
        </div>
        <div class="row container">
            <span class="col-4">Phone: </span>
            <span class="col-8"><%= lecturer.phone %></span>
        </div>
        <div class="row container">
            <span class="col-4">Date Registered: </span>
            <span class="col-8"><%= new Date(lecturer.createdAt).toLocaleDateString() %></span>
        </div>
        <%-include("./partials/messages") %>
        <a href="/lecturers/payout/<%=lecturer._id%>" class="btn btn-success mt-3">
            <i class="fas fa-sack"></i>
            Payout</a>
        <a href="/lecturers/editLecturer/<%=lecturer._id%>" class="btn btn-secondary mt-3">Edit Account</a>
        <a href="/lecturers/delete/<%=lecturer._id%>" class="btn btn-danger mt-3">Delete Account</a>
    </div>
</div>
<div class="scrollable">
    <h3>Vidoes</h3>
    <table class="table table-borderless table-striped table-earning">
        <thead>
            <tr>
                <th>Topic</th>
                <th>Sales</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% lecturer.courses.map(course => {%>
                <tr>
                    <td><%=course.topic %></td>
                    <td><%=course.sales %></td>
                    <td>
                        <a href="/lecturers/deleteVideo/<%=course.topicID%>/<%=course.courseID%>/<%=course.id%>/<%=course.lecturer._id%>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <%})%>
        </tbody>
    </table>    
</div>