<div class="container mx-auto p-5">
    <h1>Sales</h1>
</div>
<div class="scrollable">
    <table class="table table-borderless table-striped table-earning">
        <thead>
            <tr>
                <th>date</th>
                <th>Reference ID</th>
                <th>price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% sales.map(sale => {%>
                <tr>
                    <td><%= sale.date%></td>
                    <td><%= sale.reference %></td>
                    <td><%= sale.price %></td>
                    <td>
                        <a class="btn btn-dark text-white">More</a>
                    </td>
                </tr>
            <%})%>
        </tbody>
    </table>
    
</div>