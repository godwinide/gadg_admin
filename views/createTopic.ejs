<div class="card-header">
    <strong>Create Topic</strong>
</div>
<div class="card card-body">
    <div id="warningWrap">

    </div>
    <form id="topicForm" method="POST" class="form-horizontal" action="/createTopic" enctype="multipart/form-data">
        <div class="row form-group">
            <div class="col col-md-3">
                <label for="hf-name" class=" form-control-label">Title</label>
            </div>
            <div class="col-12 col-md-9">
                <input required type="name" id="title" name="name" placeholder="Enter topic title name..." class="form-control">
            </div>
        </div>
        <div class="row form-group">
            <div class="col col-md-3">
                <label for="file-input" class=" form-control-label">PDF</label>
            </div>
            <div class="col-12 col-md-9">
                <input required type="file" id="pdf" name="pdf" class="form-control-file" accept="application/pdf">
            </div>
        </div>
        <div class="row form-group">
            <div class="col col-md-3">
                <label for="file-input" class=" form-control-label">Audio</label>
            </div>
            <div class="col-12 col-md-9">
                <input required type="file" id="audio" name="audio" class="form-control-file" accept="audio/*">
            </div>
        </div>
        <div class="row form-group">
            <div class="col col-md-3">
                <label for="file-input" class=" form-control-label">Video(OPTIONAL)</label>
            </div>
            <div class="col-12 col-md-9">
                <input type="file" id="video" name="video" class="form-control-file" accept="video/*">
            </div>
        </div>
        <div class="row form-group">
            <div class="col col-md-3">
                <label for="textarea-input" class=" form-control-label">Description</label>
            </div>
            <div class="col-12 col-md-9">
                <textarea required
                value="<%= typeof description != 'undefined' ? description : '' %>"
                name="desc"
                id="desc" 
                rows="9" placeholder="Content..." 
                class="form-control"></textarea>
            </div>
        </div>
        <input type="hidden" name="courseID" id="courseID" value="<%=courseID%>" />
        <div class="card-footer">
            <div class="progress">
                <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
            </div>
            </div>
            <p id="uploadMsg"></p>
        </div>
        <div class="card-footer">
            <button id="uploadBtn" type="submit" class="btn btn-primary btn-sm">
                <i class="fa fa-dot-circle-o"></i> Create
            </button>
        </div>
    </form>
</div>

<script src="/js/uploadTopic.js"></script>